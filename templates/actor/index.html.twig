{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
    <h1>L'index des acteurs</h1>
    <div class="d-flex justify-content-end m-4">
        <button class="btn btn-warning"><a class="text-dark text-decoration-none" href="{{ path('actor_new') }}">Créer un nouvel acteur</a></button>
    </div>
    <table class="table">
        <thead>
            <tr class="text-white">
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr class="text-white">
                <td>{{ actor.id }}</td>
                <td>{{ actor.name }}</td>
                <td>
                    <a class="text-info text-decoration-none" href="{{ path('actor_show', {'slug': actor.slug}) }}">Voir</a>
                    <a class="text-info text-decoration-none" href="{{ path('actor_edit', {'slug': actor.slug}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr class="text-danger">
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
