{% extends 'base.html.twig' %}
{% block title %}{{ 'add.category'|trans }}{% endblock %}

{% block body %}
    <h2 class="mt-5">{{ 'add.new.category'|trans }}</h2>
    <div class="mt-5 text-white">
        {{ form_start(form) }}
            {{ form_row(form.name) }}
            <button class="btn btn-danger text-white">{{ button_label|default('Enregistrer') }}</button>
        {{ form_end(form) }}
    </div>
    <div class="d-flex justify-content-center mt-5">
        <button class="btn btn-warning"><a class="text-decoration-none text-dark" href="{{ path('category_index') }}">{{ 'back'|trans }}</a></button>
    </div>
{% endblock %}
