{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="container">
        <div>
            <h1 class="m-5">Category index</h1>
            <button class="btn btn-light mb-3"><a class="text-decoration-none link-button" href="{{ path('category_new') }}">Ajouter une catégorie</a></button>
        </div>
        <ul class="list-group" >
             {% for category in categories %}
                <li class="list-group">{{ category.id }} ➔ {{ category.name }}</li>
            {% endfor %}
        </ul>
    </div>
    <div class="d-flex justify-content-end m-4">
        <button class="btn btn-warning">
            <a class="text-decoration-none link-button" href="{{ path('wild_index') }}">
                Accueil
            </a>
        </button>
    </div>

{% endblock %}