{% extends 'base.html.twig' %}

{% block title %}{{ 'title.index.comment'|trans }}{% endblock %}

{% block body %}
    <h1 class="mt-5">{{ 'index.comments'|trans }}</h1>

    <table class="table text-white">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'comment.index.table'|trans }}</th>
                <th>{{ 'rate.index.table'|trans }}</th>
                <th>{{ 'actions.index.table'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.comment }}</td>
                <td>{{ comment.rate }}</td>
                <td>
                    <a href="{{ path('comment_show', {'id': comment.id}) }}">{{ 'show'|trans }}</a>
                    <a href="{{ path('comment_edit', {'id': comment.id}) }}">{{ 'edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'no.found.records'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('comment_new') }}">{{ 'new.comment.button'|trans }}Nouveau commentaire</a>
{% endblock %}
