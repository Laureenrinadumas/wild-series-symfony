{% extends 'base.html.twig' %}

{% block title %}{{ 'title.comment'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'comment.title.base'|trans }}Comment</h1>

    <table class="table text-white">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>{{ 'title.comment.show'|trans }}</th>
                <td>{{ comment.comment }}</td>
            </tr>
            <tr>
                <th>{{ 'rate.comment.show'|trans }}</th>
                <td>{{ comment.rate }}</td>
            </tr>
        </tbody>
    </table>

    <a class="text-white" href="{{ path('comment_index') }}">{{ 'back_to_list'|trans }}</a>

    <a class="text-white" href="{{ path('comment_edit', {'id': comment.id}) }}">{{ 'edit.show.comment'|trans }}</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
