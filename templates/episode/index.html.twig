{% extends 'base.html.twig' %}

{% block title %}Episode index{% endblock %}

{% block body %}
    <h1>L'index des épisodes</h1>
    <div class="d-flex justify-content-end m-4">
        <button class="btn btn-warning"><a class="text-dark text-decoration-none" href="{{ path('episode_new') }}">Créer un nouvel épisode</a></button>
    </div>
    <table class="table">
        <thead>
            <tr class="text-white">
                <th>Id</th>
                <th>Titre</th>
                <th>Numéro</th>
                <th>Synopsis</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr class="text-white">
                <td>{{ episode.id }}</td>
                <td>{{ episode.title }}</td>
                <td>{{ episode.number }}</td>
                <td>{{ episode.synopsis }}</td>
                <td>
                    <a class="text-info text-decoration-none" href="{{ path('episode_show', {'slug': episode.slug}) }}">Voir</a>
                    <a class="text-info text-decoration-none" href="{{ path('episode_edit', {'slug': episode.slug}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
