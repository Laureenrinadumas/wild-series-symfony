{% extends 'base.html.twig' %}

{% block title %}Episode index{% endblock %}

{% block body %}
    <h1>Episode index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Numéro</th>
                <th>Synopsis</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td>{{ episode.id }}</td>
                <td>{{ episode.title }}</td>
                <td>{{ episode.number }}</td>
                <td>{{ episode.synopsis }}</td>
                <td>
                    <button class="btn btn-danger"><a href="{{ path('episode_show', {'slug': episode.slug}) }}">Montrer</a></button>
                    <button class="btn btn-danger"><a href="{{ path('episode_edit', {'slug': episode.slug}) }}">Éditer</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button class="btn btn-warning"><a href="{{ path('episode_new') }}">Créer un nouvel épisode</a></button>
{% endblock %}
