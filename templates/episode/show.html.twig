{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>
    <table class="table text-white">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex align-self-end">
        <button class="btn btn-danger mr-4">
            <a class="text-white" href="{{ path('episode_edit', {'slug': episode.slug}) }}">Éditer</a>
        </button>
        {{ include('episode/_delete_form.html.twig') }}
    </div>
    <div class="d-flex justify-content-center mt-5">
        <button class="btn btn-warning">
            <a class="text-dark text-decoration-none" href="{{ path('episode_index') }}">Retour</a>
        </button>
    </div>
{% endblock %}
