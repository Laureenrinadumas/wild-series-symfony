{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>
    <button class="btn btn-warning"><a href="{{ path('episode_index') }}">Retour à la liste</a></button>
    <button class="btn btn-danger"><a href="{{ path('episode_edit', {'id': episode.id}) }}">Éditer</a></button>
    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
