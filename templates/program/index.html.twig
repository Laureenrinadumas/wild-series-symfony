{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
    <h1 class="m-4">Programme index</h1>
    <div class="d-flex justify-content-end m-4">
    <button class="btn btn-warning">
        <a class="text-decoration-none link-button" href="{{ path('program_new') }}">
            Créer un nouveau programme
        </a>
    </button>
    </div>
    <table  class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Titre</th>
                <th scope="col">Résumé</th>
                <th scope="col">Acteurs</th>
                <th scope="col">Poster</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.id }}</td>
                <td>{{ program.title }}</td>
                <td>{{ program.summary }}</td>
                <td>

                        <li class="list-unstyled">
                            {% for actor in program.actors %}
                            {{ actor.name }}
                        </li>

                    {% else %}
                        <li>Oups pas d'acteur pour cette série</li>
                    {% endfor %}
                </td>
                <td><img class="w-50" src="{{ program.poster }}" alt="poster"></td>
                <td>
                    <a href="{{ path('program_show', {'slug': program.slug}) }}">Montrer</a>
                    <a href="{{ path('program_edit', {'slug': program.slug}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
