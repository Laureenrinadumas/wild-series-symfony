{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1>Saisons</h1>
    <table class="table text-white">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex align-self-end">
        <button class="btn btn-danger mr-3">
            <a class="text-white text-decoration-none" href="{{ path('season_edit', {'id': season.id}) }}">Éditer</a>
        </button>
        {{ include('season/_delete_form.html.twig') }}
    </div>
    <div class="d-flex justify-content-center mt-5">
        <button class="btn btn-warning">
            <a class="text-dark text-decoration-none" href="{{ path('season_index') }}">Retour</a>
        </button>
    </div>
{% endblock %}
