{% extends 'base.html.twig' %}
{% block title %}Episodes{% endblock %}

{% block body %}
    <div class="block-main text-center">
        <h1 class="text-center">{{ program.title }}</h1>
        <p class="font-weight-bold">Episode {{ episode.number }}: {{ episode.title }}</p>
        <p  class="font-weight-bold">Saison {{ season.id }}: {{ season.year }}</p>
        <p>{{ episode.synopsis }}</p>
    </div>
    <div>
        <h3>Commentaires</h3>
        {% for comment in comments %}
            <div>
                <ul class="list-unstyled">
                    <li>Episode : {{ program.title }} - {{ comment.episode.title }}</li>
                    <li>Auteur : {{ comment.author.username }}</li>
                    <li>Commentaire : {{ comment.comment }}</li>
                    <li>Note : {{ comment.rate }}</li>
                </ul>
            </div>
            <br>
        {% endfor %}
    </div>

    {% if app.user %}
        <h3>Ajouter un commentaire</h3>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-warning">Ajouter</button>
        {{ form_end(form) }}
    {% endif %}
    <button class="btn btn-warning"><a href="{{ path('wild_show_season', {'id' : season.id}) }}">
        Retour à la liste des épisodes
    </a></button>
    <button class="btn btn-warning"><a href="{{ path('wild_index') }}">Retour à l'accueil</a></button>
{% endblock %}