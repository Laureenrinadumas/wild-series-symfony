{% extends 'base.html.twig' %}

{% block title %}Programs{% endblock %}

{% block body %}
    <h1>Toutes les séries : </h1>
    <a href="{{ path('program_index') }}">Programme index</a>
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / <a href="{{ path('wild_show', { 'slug': program.title }) }}"> {{ program.title }}</a> - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    {{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>
        <div >
            {{ form_row(form.searchField) }}
        </div>
    <button class="btn btn-warning"type="submit" name="btnSearch">Rechercher</button>
    {{ form_end(form) }}
    <button class="btn btn-warning"><a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a></button>
{% endblock %}
