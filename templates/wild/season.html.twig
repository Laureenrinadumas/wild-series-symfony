{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            {% for episode in episodes %}
                <h3><a href="{{ path('wild_show_episode', {'id' : episode.id}) }}">Épisode {{ episode.number }}: {{ episode.title }} =====>slug : {{ episode.slug }}</a></h3>
            {% endfor %}
            <button class="btn btn-warning"><a href="{{ path('episode_new') }}">Ajouter un épisode</a></button>
        </div>
    </div>
    <button class="btn btn-warning"><a href="{{ path('wild_show', {'slug' : program.slug }) }}">Retour</a></button>
    <button class="btn btn-warning"><a href="{{ path('wild_index') }}">Retour à l'accueil</a></button>
{% endblock %}
