{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <div class="media mt-5">
        <div class="grayscale ">
            <img class="img-poster shadow-lg p-3 mb-5" src="{{program.poster}}" alt="{{ program.title }} poster">
        </div>
        <div class="ml-3">
            <h1 class="m-2">{{ program.title }}</h1>
            <p class="text-justify text-white mt-3">{{ program.summary }}</p>
            {% for episode in episodes %}
                <h4><a class="text-decoration-none text-white m-3" href="{{ path('wild_show_episode', {'id' : episode.id}) }}">{{ 'episode.program'|trans }} {{ episode.number }}: {{ episode.title }}</a></h4>
            {% endfor %}
            {% if is_granted('ROLE_ADMIN') %}
            <button class="btn btn-danger mt-4"><a class="text-decoration-none text-white" href="{{ path('episode_new') }}">{{ 'add.episode'|trans }}</a></button>
            {% endif %}
        </div>
    </div>
    <button class="btn btn-warning m-3"><a class="text-decoration-none text-dark"  href="{{ path('wild_show', {'slug' : program.slug }) }}">{{ 'back.seasons'|trans }}</a></button>
    <button class="btn btn-warning m-3"><a class="text-decoration-none text-dark" href="{{ path('wild_index') }}">{{ 'home'|trans }}</a></button>
{% endblock %}
