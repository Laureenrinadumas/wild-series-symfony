{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <div class="media mt-5">
        <img class="w-50 align-self-start" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="ml-3">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p class="text-justify">{{ program.summary }}</p>
            {% for episode in episodes %}
                <h3><a class="text-decoration-none " href="{{ path('wild_show_episode', {'id' : episode.id}) }}">Épisode {{ episode.number }}: {{ episode.title }}</a></h3>
            {% endfor %}
            <button class="btn btn-warning"><a href="{{ path('episode_new') }}">Ajouter un épisode</a></button>
        </div>
    </div>
    <button class="btn btn-warning"><a href="{{ path('wild_show', {'slug' : program.slug }) }}">Retour</a></button>
    <button class="btn btn-warning"><a href="{{ path('wild_index') }}">Accueil</a></button>
{% endblock %}
